<h1>Add a New Song!</h1>

<form action="/songs" method="POST">
  <label for="Artist Name">Artist Name</label></br>
  <input type="text" name="Artist Name"></br>

  <label for="Name">Song Name</label></br>
  <input type="text" name="Name"></br>

  <label> Genres </label>
 <% Genre.all.each do |genre| %>
  <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input><br>
<% end %>

  <p><input type="submit" id="Create"></p>

</form>